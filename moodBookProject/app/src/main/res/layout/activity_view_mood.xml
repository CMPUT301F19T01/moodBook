<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewMoodActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/mood_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height">

        <ImageView
            android:id="@+id/view_mood_emotion"
            android:layout_width="@dimen/emoticon_size"
            android:layout_height="@dimen/emoticon_size"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/view_mood_emotion_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/view_mood_emotion"
            android:layout_toRightOf="@+id/view_mood_emotion"
            android:gravity="center_vertical"
            android:text="@string/pick_mood_emotional_state"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>


</LinearLayout>