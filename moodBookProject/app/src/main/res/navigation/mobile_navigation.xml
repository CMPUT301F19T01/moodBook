<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_myMood">



    <fragment
        android:id="@+id/nav_myMood"
        android:name="com.example.moodbook.ui.home.HomeFragment"
        android:label="Mood History"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_FriendMood"
        android:name="com.example.moodbook.ui.friendMood.friendMoodFragment"
        android:label="Friend Mood"
        tools:layout="@layout/fragment_friendmood" />
    <fragment
        android:id="@+id/nav_addFriendsMood"
        android:name="com.example.moodbook.ui.addFriends.addFriendFragment"
